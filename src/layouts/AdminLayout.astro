---
import "~/styles/global.css";
const { title = "Panel Administrador FESC" } = Astro.props
import { Building, Home, Plus, Users, LogOut, User, RefreshCw, BarChart3 } from "lucide-react";
---
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Panel de administración FESC para gestión de practicantes" />
    <link rel="icon" href="/favicon.ico" />
    <title>{title}</title>
  </head>
  <body class="bg-gray-50 text-gray-900 h-screen flex antialiased">
    <aside class="w-64 bg-white shadow-xl border-r border-gray-200 flex flex-col h-screen fixed">
      <!-- Logo y Header -->
      <div class="p-6 border-b border-gray-200 flex-shrink-0">
        <div class="flex items-center gap-3">
          <div class="w-10 h-10 bg-accent rounded-lg flex items-center justify-center">
            <Building className="w-6 h-6 text-white" />
          </div>
          <div>
            <h1 class="text-xl font-bold text-gray-800">FESC</h1>
            <p class="text-xs text-gray-500">Panel Admin</p>
          </div>
        </div>
      </div>
      
      <!-- Navegación -->
      <nav class="flex-1 p-4 space-y-2 overflow-y-auto">
        <a href="/admin/dashboard" 
           class="flex items-center gap-3 text-gray-700 hover:bg-gray-100 hover:text-accent rounded-lg px-3 py-2 transition-all duration-200 group">
          <Home className="w-5 h-5 group-hover:scale-110 transition-transform" />
          <span class="font-medium">Dashboard</span>
        </a>
        
        <a href="/admin/nuevo-practicante" 
           class="flex items-center gap-3 text-gray-700 hover:bg-gray-100 hover:text-accent rounded-lg px-3 py-2 transition-all duration-200 group">
          <Plus className="w-5 h-5 group-hover:scale-110 transition-transform" />
          <span class="font-medium">Nuevo Practicante</span>
        </a>
        
        <a href="/admin/practicantes" 
           class="flex items-center gap-3 text-gray-700 hover:bg-gray-100 hover:text-accent rounded-lg px-3 py-2 transition-all duration-200 group">
          <Users className="w-5 h-5 group-hover:scale-110 transition-transform" />
          <span class="font-medium">Practicantes</span>
        </a>
        
        <a href="/admin/empresas" 
           class="flex items-center gap-3 text-gray-700 hover:bg-gray-100 hover:text-accent rounded-lg px-3 py-2 transition-all duration-200 group">
          <Building className="w-5 h-5 group-hover:scale-110 transition-transform" />
          <span class="font-medium">Empresas</span>
        </a>
        
        <a href="/admin/estadisticas-css" 
           class="flex items-center gap-3 text-gray-700 hover:bg-gray-100 hover:text-accent rounded-lg px-3 py-2 transition-all duration-200 group">
          <BarChart3 className="w-5 h-5 group-hover:scale-110 transition-transform" />
          <span class="font-medium">Estadísticas</span>
        </a>
      </nav>
      
      <!-- Footer de la sidebar -->
      <div class="p-4 border-t border-gray-200 flex-shrink-0">
        <div class="flex items-center justify-between">
          <div class="flex items-center gap-2">
            <div class="w-8 h-8 bg-gray-200 rounded-full flex items-center justify-center">
              <User className="w-4 h-4 text-gray-600" />
            </div>
            <span class="text-sm text-gray-600">Administrador</span>
          </div>
          <a href="/login" class="text-sm text-gray-500 hover:text-accent transition-colors flex items-center gap-1">
            <LogOut className="w-4 h-4" />
            Salir
          </a>
        </div>
      </div>
    </aside>
    
    <main class="flex-1 flex flex-col ml-64 h-screen overflow-hidden">
      <!-- Header del contenido -->
      <header class="bg-white shadow-sm border-b border-gray-200 p-6">
        <div class="flex items-center justify-between">
          <div>
            <h2 class="text-2xl font-bold text-gray-800">Panel de Administración</h2>
            <p class="text-gray-600 text-sm mt-1">Gestiona los practicantes y empresas colaboradoras</p>
          </div>
          <div class="flex items-center gap-4">
            <button class="p-2 text-gray-500 hover:text-accent transition-colors">
              <RefreshCw className="w-5 h-5" />
            </button>
          </div>
        </div>
      </header>
      
      <!-- Contenido principal -->
      <div class="flex-1 p-6 bg-gray-50 overflow-y-auto">
        <slot />
      </div>
    </main>
  </body>
</html>
