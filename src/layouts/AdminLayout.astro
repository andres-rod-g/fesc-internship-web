---
import "~/styles/global.css";
import "~/styles/responsive.css";
import ResponsiveSidebar from "~/components/ResponsiveSidebar.jsx";
import jwt from "jsonwebtoken";
import { JWT_SECRET } from "~/env";
import { connectDB } from "~/utils/db.js";

const { title = "Panel Administrador FESC" } = Astro.props;
const currentUrl = Astro.url.pathname;

const isActive = (path: string) => currentUrl === path || currentUrl.startsWith(path + '/');
import { Building, Home, Plus, Users, LogOut, User, RefreshCw, BarChart3, CreditCard, UserCheck, BookOpen, ClipboardList, Users as UsersIcon, Briefcase, FileText, Users as UsersGroup, Stamp } from "lucide-react";

const token = Astro.cookies.get("token")?.value;
let user = null;
if (token) {
  try {
    user = jwt.verify(token, JWT_SECRET);
  } catch (err) {
    user = null;
  }
}

let badges = {
  preinscripciones: 0,
  validaciones_pago: 0,
  estudiantes_por_crear: 0,
  solicitudes_pendientes: 0,
  validacion_firmas: 0,
};

if (user) {
  try {
    const db = await connectDB();

    badges.preinscripciones = await db.collection("practicantes").countDocuments({
      estado_preinscripcion: "preinscrito"
    });

    badges.validaciones_pago = await db.collection("practicantes").countDocuments({
      estado_preinscripcion: "pago_pendiente",
      "validacion_pago.estado": "pendiente"
    });

    if (user.role === "admin") {
      badges.estudiantes_por_crear = await db.collection("practicantes").countDocuments({
        estado_preinscripcion: "pago_validado",
        "validacion_pago.estado": "aprobado"
      });

      badges.solicitudes_pendientes = await db.collection("solicitudes_practicantes").countDocuments({
        estado: "pendiente_revision"
      });

      badges.validacion_firmas = await db.collection("recursos").countDocuments({
        verificacionRequerida: true,
        estado: "pendiente",
        $and: [
          { url: { $exists: true } },
          { url: { $ne: null } },
          { url: { $ne: "" } },
          { url: { $regex: /\S/ } }
        ]
      });
    }

    if (user.role === "director") {
      badges.solicitudes_pendientes = await db.collection("solicitudes_practicantes").countDocuments({
        estado: "pendiente_revision"
      });

      badges.validacion_firmas = await db.collection("recursos").countDocuments({
        verificacionRequerida: true,
        estado: "pendiente",
        $and: [
          { url: { $exists: true } },
          { url: { $ne: null } },
          { url: { $ne: "" } },
          { url: { $regex: /\S/ } }
        ]
      });
    }

    if (user.role === "director_practicas") {
      badges.validacion_firmas = await db.collection("recursos").countDocuments({
        verificacionRequerida: true,
        estado: "pendiente",
        $and: [
          { url: { $exists: true } },
          { url: { $ne: null } },
          { url: { $ne: "" } },
          { url: { $regex: /\S/ } }
        ]
      });
    }
  } catch (error) {
    console.error("Error al obtener badges:", error);
  }
}
---
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Panel de administración FESC para gestión de practicantes" />
    <link rel="icon" href="/favicon.ico" />
    <title>{title}</title>
  </head>
  <body class="bg-gray-50 text-gray-900 min-h-screen flex antialiased">
    <ResponsiveSidebar client:load>
      <!-- Logo y Header -->
      <div class="p-6 border-b border-gray-200 flex-shrink-0">
        <div class="flex items-center gap-3">
          <div class="w-10 h-10 bg-accent rounded-lg flex items-center justify-center">
            <Building className="w-6 h-6 text-white" />
          </div>
          <div>
            <h1 class="text-xl font-bold text-gray-800">FESC</h1>
            <p class="text-xs text-gray-500">Panel Admin</p>
          </div>
        </div>
      </div>
      
      <!-- Navegación -->
      <nav class="flex-1 p-4 space-y-2 overflow-y-auto">
        <!-- Inicio para todos -->
        <a href="/admin/dashboard"
           class={`flex items-center gap-3 rounded-lg px-3 py-2 transition-all duration-200 group ${
             isActive('/admin/dashboard')
               ? 'bg-accent text-white'
               : 'text-gray-700 hover:bg-gray-100 hover:text-accent'
           }`}>
          <Home className="w-5 h-5 group-hover:scale-110 transition-transform" />
          <span class="font-medium">Inicio</span>
        </a>

        <!-- Registro y Control: SOLO VE Validar Pagos -->
        {user?.role === "registro_control" && (
          <a href="/admin/validaciones-pago"
             class={`flex items-center justify-between rounded-lg px-3 py-2 transition-all duration-200 group ${
               isActive('/admin/validaciones-pago')
                 ? 'bg-accent text-white'
                 : 'text-gray-700 hover:bg-gray-100 hover:text-accent'
             }`}>
            <div class="flex items-center gap-3">
              <CreditCard className="w-5 h-5 group-hover:scale-110 transition-transform" />
              <span class="font-medium">Validar Pagos</span>
            </div>
            {badges.validaciones_pago > 0 && (
              <span class="inline-flex items-center justify-center min-w-[20px] h-5 px-1.5 text-xs font-bold text-white bg-yellow-600 rounded-full">
                {badges.validaciones_pago}
              </span>
            )}
          </a>
        )}

        <!-- Director: VE Solicitudes de Practicantes (Profesor NO) -->
        {user?.role === "director" && (
          <a href="/admin/solicitudes-practicantes"
             class={`flex items-center justify-between rounded-lg px-3 py-2 transition-all duration-200 group ${
               isActive('/admin/solicitudes-practicantes')
                 ? 'bg-accent text-white'
                 : 'text-gray-700 hover:bg-gray-100 hover:text-accent'
             }`}>
            <div class="flex items-center gap-3">
              <Briefcase className="w-5 h-5 group-hover:scale-110 transition-transform" />
              <span class="font-medium">Solicitudes</span>
            </div>
            {badges.solicitudes_pendientes > 0 && (
              <span class="inline-flex items-center justify-center min-w-[20px] h-5 px-1.5 text-xs font-bold text-white bg-purple-600 rounded-full">
                {badges.solicitudes_pendientes}
              </span>
            )}
          </a>
        )}

        <!-- Admin ve todo -->
        {user?.role === "admin" && (
          <>
            <div class="pt-2 pb-2">
              <p class="text-xs font-semibold text-gray-500 uppercase tracking-wider px-3 mb-2">Preinscripciones</p>

              <a href="/admin/nuevo-practicante"
                 class={`flex items-center gap-3 rounded-lg px-3 py-2 transition-all duration-200 group ${
                   isActive('/admin/nuevo-practicante')
                     ? 'bg-accent text-white'
                     : 'text-gray-700 hover:bg-gray-100 hover:text-accent'
                 }`}>
                <Plus className="w-5 h-5 group-hover:scale-110 transition-transform" />
                <span class="font-medium">Nuevo Practicante</span>
              </a>

              <a href="/admin/validaciones-pago"
                 class={`flex items-center justify-between rounded-lg px-3 py-2 transition-all duration-200 group ${
                   isActive('/admin/validaciones-pago')
                     ? 'bg-accent text-white'
                     : 'text-gray-700 hover:bg-gray-100 hover:text-accent'
                 }`}>
                <div class="flex items-center gap-3">
                  <CreditCard className="w-5 h-5 group-hover:scale-110 transition-transform" />
                  <span class="font-medium">Validar Pagos</span>
                </div>
                {badges.validaciones_pago > 0 && (
                  <span class="inline-flex items-center justify-center min-w-[20px] h-5 px-1.5 text-xs font-bold text-white bg-yellow-600 rounded-full">
                    {badges.validaciones_pago}
                  </span>
                )}
              </a>

              <a href="/admin/estudiantes-por-crear"
                 class={`flex items-center justify-between rounded-lg px-3 py-2 transition-all duration-200 group ${
                   isActive('/admin/estudiantes-por-crear')
                     ? 'bg-accent text-white'
                     : 'text-gray-700 hover:bg-gray-100 hover:text-accent'
                 }`}>
                <div class="flex items-center gap-3">
                  <UserCheck className="w-5 h-5 group-hover:scale-110 transition-transform" />
                  <span class="font-medium">Crear Estudiantes</span>
                </div>
                {badges.estudiantes_por_crear > 0 && (
                  <span class="inline-flex items-center justify-center min-w-[20px] h-5 px-1.5 text-xs font-bold text-white bg-green-600 rounded-full">
                    {badges.estudiantes_por_crear}
                  </span>
                )}
              </a>

              <a href="/admin/practicantes"
                 class={`flex items-center justify-between rounded-lg px-3 py-2 transition-all duration-200 group ${
                   isActive('/admin/practicantes')
                     ? 'bg-accent text-white'
                     : 'text-gray-700 hover:bg-gray-100 hover:text-accent'
                 }`}>
                <div class="flex items-center gap-3">
                  <ClipboardList className="w-5 h-5 group-hover:scale-110 transition-transform" />
                  <span class="font-medium">Practicantes</span>
                </div>
                {badges.preinscripciones > 0 && (
                  <span class="inline-flex items-center justify-center min-w-[20px] h-5 px-1.5 text-xs font-bold text-white bg-blue-600 rounded-full">
                    {badges.preinscripciones}
                  </span>
                )}
              </a>
            </div>

            <div class="pt-2 pb-2">
              <p class="text-xs font-semibold text-gray-500 uppercase tracking-wider px-3 mb-2">Empresas</p>

              <a href="/admin/nueva-solicitud-empresa"
                 class={`flex items-center gap-3 rounded-lg px-3 py-2 transition-all duration-200 group ${
                   isActive('/admin/nueva-solicitud-empresa')
                     ? 'bg-accent text-white'
                     : 'text-gray-700 hover:bg-gray-100 hover:text-accent'
                 }`}>
                <Plus className="w-5 h-5 group-hover:scale-110 transition-transform" />
                <span class="font-medium">Nueva Solicitud</span>
              </a>

              <a href="/admin/solicitudes-practicantes"
                 class={`flex items-center justify-between rounded-lg px-3 py-2 transition-all duration-200 group ${
                   isActive('/admin/solicitudes-practicantes')
                     ? 'bg-accent text-white'
                     : 'text-gray-700 hover:bg-gray-100 hover:text-accent'
                 }`}>
                <div class="flex items-center gap-3">
                  <Briefcase className="w-5 h-5 group-hover:scale-110 transition-transform" />
                  <span class="font-medium">Solicitudes Recibidas</span>
                </div>
                {badges.solicitudes_pendientes > 0 && (
                  <span class="inline-flex items-center justify-center min-w-[20px] h-5 px-1.5 text-xs font-bold text-white bg-purple-600 rounded-full">
                    {badges.solicitudes_pendientes}
                  </span>
                )}
              </a>

              <a href="/admin/empresas"
                 class={`flex items-center gap-3 rounded-lg px-3 py-2 transition-all duration-200 group ${
                   isActive('/admin/empresas')
                     ? 'bg-accent text-white'
                     : 'text-gray-700 hover:bg-gray-100 hover:text-accent'
                 }`}>
                <Building className="w-5 h-5 group-hover:scale-110 transition-transform" />
                <span class="font-medium">Empresas</span>
              </a>
            </div>

            <div class="pt-2 pb-2">
              <p class="text-xs font-semibold text-gray-500 uppercase tracking-wider px-3 mb-2">Gestión de Prácticas</p>

              <a href="/admin/usuarios"
                 class={`flex items-center gap-3 rounded-lg px-3 py-2 transition-all duration-200 group ${
                   isActive('/admin/usuarios')
                     ? 'bg-accent text-white'
                     : 'text-gray-700 hover:bg-gray-100 hover:text-accent'
                 }`}>
                <Users className="w-5 h-5 group-hover:scale-110 transition-transform" />
                <span class="font-medium">Usuarios</span>
              </a>

              <a href="/admin/grupos"
                 class={`flex items-center gap-3 rounded-lg px-3 py-2 transition-all duration-200 group ${
                   isActive('/admin/grupos')
                     ? 'bg-accent text-white'
                     : 'text-gray-700 hover:bg-gray-100 hover:text-accent'
                 }`}>
                <UsersGroup className="w-5 h-5 group-hover:scale-110 transition-transform" />
                <span class="font-medium">Grupos</span>
              </a>

              <a href="/admin/validacion-firmas"
                 class={`flex items-center justify-between gap-3 rounded-lg px-3 py-2 transition-all duration-200 group ${
                   isActive('/admin/validacion-firmas')
                     ? 'bg-accent text-white'
                     : 'text-gray-700 hover:bg-gray-100 hover:text-accent'
                 }`}>
                <div class="flex items-center gap-3">
                  <Stamp className="w-5 h-5 group-hover:scale-110 transition-transform" />
                  <span class="font-medium">Validación de Firmas</span>
                </div>
                {badges.validacion_firmas > 0 && (
                  <span class="inline-flex items-center justify-center min-w-[20px] h-5 px-1.5 text-xs font-bold text-white bg-red-600 rounded-full">
                    {badges.validacion_firmas}
                  </span>
                )}
              </a>
            </div>

            <div class="pt-2 pb-2">
              <p class="text-xs font-semibold text-gray-500 uppercase tracking-wider px-3 mb-2">Otros</p>

              <a href="/admin/estadisticas-css"
                 class={`flex items-center gap-3 rounded-lg px-3 py-2 transition-all duration-200 group ${
                   isActive('/admin/estadisticas-css')
                     ? 'bg-accent text-white'
                     : 'text-gray-700 hover:bg-gray-100 hover:text-accent'
                 }`}>
                <BarChart3 className="w-5 h-5 group-hover:scale-110 transition-transform" />
                <span class="font-medium">Estadísticas</span>
              </a>
            </div>

            <div class="pt-2">
              <p class="text-xs font-semibold text-gray-500 uppercase tracking-wider px-3 mb-2">Ayuda</p>

              <a href="/admin/documentacion-flujo"
                 class={`flex items-center gap-3 rounded-lg px-3 py-2 transition-all duration-200 group ${
                   isActive('/admin/documentacion-flujo')
                     ? 'bg-accent text-white'
                     : 'text-gray-700 hover:bg-gray-100 hover:text-accent'
                 }`}>
                <BookOpen className="w-5 h-5 group-hover:scale-110 transition-transform" />
                <span class="font-medium">Documentación</span>
              </a>
            </div>
          </>
        )}

        <!-- Profesor: VE Gestión de Prácticas (sin Usuarios y sin Validación de Firmas) -->
        {user?.role === "profesor" && (
          <>
            <div class="pt-2 pb-2">
              <p class="text-xs font-semibold text-gray-500 uppercase tracking-wider px-3 mb-2">Gestión de Prácticas</p>

              <a href="/admin/grupos"
                 class={`flex items-center gap-3 rounded-lg px-3 py-2 transition-all duration-200 group ${
                   isActive('/admin/grupos')
                     ? 'bg-accent text-white'
                     : 'text-gray-700 hover:bg-gray-100 hover:text-accent'
                 }`}>
                <UsersGroup className="w-5 h-5 group-hover:scale-110 transition-transform" />
                <span class="font-medium">Grupos</span>
              </a>
            </div>

            <div class="pt-2">
              <p class="text-xs font-semibold text-gray-500 uppercase tracking-wider px-3 mb-2">Ayuda</p>

              <a href="/admin/documentacion-flujo"
                 class={`flex items-center gap-3 rounded-lg px-3 py-2 transition-all duration-200 group ${
                   isActive('/admin/documentacion-flujo')
                     ? 'bg-accent text-white'
                     : 'text-gray-700 hover:bg-gray-100 hover:text-accent'
                 }`}>
                <BookOpen className="w-5 h-5 group-hover:scale-110 transition-transform" />
                <span class="font-medium">Documentación</span>
              </a>
            </div>
          </>
        )}
      </nav>
      
      <!-- Footer de la sidebar -->
      <div class="p-4 border-t border-gray-200 flex-shrink-0">
        <div class="flex items-center justify-between">
          <div class="flex items-center gap-2">
            <div class="w-8 h-8 bg-gray-200 rounded-full flex items-center justify-center">
              <User className="w-4 h-4 text-gray-600" />
            </div>
            <span class="text-sm text-gray-600">Administrador</span>
          </div>
          <a href="/login" class="text-sm text-gray-500 hover:text-accent transition-colors flex items-center gap-1">
            <LogOut className="w-4 h-4" />
            Salir
          </a>
        </div>
      </div>
    </ResponsiveSidebar>

    <main class="flex-1 flex flex-col min-h-screen">
      <!-- Header del contenido -->
      <header class="bg-white shadow-sm border-b border-gray-200 p-4 md:p-6 flex-shrink-0">
        <div class="flex items-center justify-between gap-4">
          <div class="min-w-0 flex-1">
            <h2 class="text-xl md:text-2xl font-bold text-gray-800 truncate">Panel de Administración</h2>
            <p class="text-gray-600 text-xs md:text-sm mt-1 hidden sm:block">Gestiona los practicantes y empresas colaboradoras</p>
          </div>
          <div class="flex items-center gap-2 md:gap-4 flex-shrink-0">
            <button class="p-2 text-gray-500 hover:text-accent transition-colors">
              <RefreshCw className="w-5 h-5" />
            </button>
          </div>
        </div>
      </header>

      <!-- Contenido principal -->
      <div class="flex-1 p-4 md:p-6 overflow-y-auto">
        <slot />
      </div>
    </main>
  </body>
</html>
