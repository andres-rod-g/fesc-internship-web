---
import "~/styles/global.css";
import "~/styles/responsive.css";
import ResponsiveSidebar from "~/components/ResponsiveSidebar.jsx";
import SidebarFooter from "~/components/SidebarFooter.astro";
import jwt from "jsonwebtoken";
import { JWT_SECRET } from "~/env";
import { Building, Home, Users, LogOut, User, RefreshCw } from "lucide-react";

interface Props {
  title: string;
  activeTab?: "home" | "proceso" | "recursos";
}

const { title, activeTab = "home" } = Astro.props;
const currentUrl = Astro.url.pathname;

const isActive = (path: string) => currentUrl === path || currentUrl.startsWith(path + '/');

const token = Astro.cookies.get("token")?.value;
let user = null;
if (token) {
  try {
    user = jwt.verify(token, JWT_SECRET);
  } catch (err) {
    user = null;
  }
}
---

<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Panel de estudiante FESC para gestión de prácticas" />
    <link rel="icon" href="/favicon.ico" />
    <title>{title}</title>
  </head>
  <body class="bg-gray-50 text-gray-900 min-h-screen flex antialiased">
    <ResponsiveSidebar client:load>
      <!-- Logo y Header -->
      <div class="p-6 border-b border-gray-200 flex-shrink-0">
        <div class="flex items-center gap-3">
          <div class="w-10 h-10 bg-accent rounded-lg flex items-center justify-center">
            <Building className="w-6 h-6 text-white" />
          </div>
          <div>
            <h1 class="text-xl font-bold text-gray-800">FESC</h1>
            <p class="text-xs text-gray-500">Mi Plataforma</p>
          </div>
        </div>
      </div>

      <!-- Navegación -->
      <nav class="flex-1 p-4 space-y-2 overflow-y-auto">
        <a href="/admin/dashboard"
           class={`flex items-center gap-3 rounded-lg px-3 py-2 transition-all duration-200 group ${
             isActive('/admin/dashboard') && !isActive('/admin/student')
               ? 'bg-accent text-white'
               : 'text-gray-700 hover:bg-gray-100 hover:text-accent'
           }`}>
          <Home className="w-5 h-5 group-hover:scale-110 transition-transform" />
          <span class="font-medium">Mi Inicio</span>
        </a>

        <div class="pt-2 pb-2">
          <p class="text-xs font-semibold text-gray-500 uppercase tracking-wider px-3 mb-2">Prácticas</p>

          <a href="/admin/student/proceso"
             class={`flex items-center gap-3 rounded-lg px-3 py-2 transition-all duration-200 group ${
               isActive('/admin/student/proceso')
                 ? 'bg-accent text-white'
                 : 'text-gray-700 hover:bg-gray-100 hover:text-accent'
             }`}>
            <Users className="w-5 h-5 group-hover:scale-110 transition-transform" />
            <span class="font-medium">Procesos de Prácticas</span>
          </a>
        </div>
      </nav>

      <!-- Footer de la sidebar -->
      <SidebarFooter showDebug={false} />
    </ResponsiveSidebar>

    <main class="flex-1 flex flex-col min-h-screen">
      <!-- Header del contenido -->
      <header class="bg-white shadow-sm border-b border-gray-200 p-4 md:p-6 flex-shrink-0">
        <div class="flex items-center justify-between gap-4">
          <div class="min-w-0 flex-1">
            <h2 class="text-xl md:text-2xl font-bold text-gray-800 truncate">Mi Panel</h2>
            <p class="text-gray-600 text-xs md:text-sm mt-1 hidden sm:block">Gestiona tu información de prácticas</p>
          </div>
          <div class="flex items-center gap-2 md:gap-4 flex-shrink-0">
            <button class="p-2 text-gray-500 hover:text-accent transition-colors">
              <RefreshCw className="w-5 h-5" />
            </button>
          </div>
        </div>
      </header>

      <!-- Contenido principal -->
      <div class="flex-1 p-4 md:p-6 overflow-y-auto">
        <slot />
      </div>
    </main>
  </body>
</html>
