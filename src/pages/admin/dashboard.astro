---
import AdminLayout from "../../layouts/AdminLayout.astro";
import StudentLayout from "../../layouts/StudentLayout.astro";
import jwt from "jsonwebtoken";
import { JWT_SECRET } from "~/env";
import { connectDB } from "~/utils/db.js";
import { ObjectId } from "mongodb";

const token = Astro.cookies.get("token")?.value;
let user = null;
if (token) {
  try {
    user = jwt.verify(token, JWT_SECRET);
  } catch (err) {
    console.error("Error al verificar el token:", err);
    user = null;
  }
}

if (!user) {
  console.log("Token inválido o no presente. Redirigiendo al login.");
  return Astro.redirect("/login");
}

// Obtener estadísticas reales de la base de datos
const db = await connectDB();

let dashboardData = {};

// Si es estudiante, mostrar su información personalizada
if (user.role === "estudiante") {
  // Obtener los datos del estudiante
  const estudiante = await db.collection("users").findOne({ _id: new ObjectId(user.id) });

  // Obtener su proceso de prácticas
  const proceso = await db.collection("proceso-practicas").findOne({
    estudianteId: new ObjectId(user.id)
  });

  // Obtener su grupo
  let grupo = null;
  if (proceso) {
    grupo = await db.collection("grupos").findOne({ _id: proceso.grupoId });
  }

  // Obtener sus seguimientos
  let seguimientos = [];
  if (grupo) {
    seguimientos = await db.collection("seguimientos-practicas")
      .find({ grupoId: grupo._id })
      .toArray();
  }

  // Contar recursos de seguimiento completados vs pendientes
  let recursosPendientes = 0;
  let recursosValidados = 0;
  let recursosRechazados = 0;

  if (seguimientos.length > 0) {
    const recursos = await db.collection("recursos")
      .find({
        tipo: "seguimiento",
        usuarioId: new ObjectId(user.id),
        grupoId: grupo?._id
      })
      .toArray();

    recursos.forEach(r => {
      if (r.estado === "pendiente") recursosPendientes++;
      else if (r.estado === "validado") recursosValidados++;
      else if (r.estado === "rechazado") recursosRechazados++;
    });
  }

  dashboardData = {
    isEstudiante: true,
    estudiante,
    proceso,
    grupo,
    seguimientos,
    recursosPendientes,
    recursosValidados,
    recursosRechazados
  };
} else {
  // Dashboard para administradores y directores
  // Total de practicantes
  const totalPracticantes = await db.collection("practicantes").countDocuments();

  // Total de empresas
  const totalEmpresas = await db.collection("empresas").countDocuments();

  // Practicantes por estado
  const estadosPracticantes = await db.collection("practicantes").aggregate([
    {
      $group: {
        _id: "$estado",
        count: { $sum: 1 }
      }
    }
  ]).toArray();

  // Crear mapa de estados
  const estadosMap = {};
  estadosPracticantes.forEach(est => {
    estadosMap[est._id] = est.count;
  });

  const pendientes = estadosMap['pendiente'] || 0;
  const revisando = estadosMap['revisando'] || 0;
  const finalizados = estadosMap['finalizado'] || 0;
  const rechazados = estadosMap['rechazado'] || 0;

  // Contar prácticas activas (empresas con practicantes asignados)
  const empresasConPracticantes = await db.collection("empresas").aggregate([
    { $unwind: { path: "$practicantes_asignados", preserveNullAndEmptyArrays: false } },
    {
      $match: {
        "practicantes_asignados.estado_practica": { $in: ["pendiente", "activo"] }
      }
    },
    {
      $group: {
        _id: null,
        count: { $sum: 1 }
      }
    }
  ]).toArray();

  const practicasActivas = empresasConPracticantes.length > 0 ? empresasConPracticantes[0].count : 0;

  // Obtener actividad reciente (últimos 5 practicantes registrados)
  const actividadReciente = await db.collection("practicantes")
    .find({})
    .sort({ _id: -1 })
    .limit(5)
    .toArray();

  dashboardData = {
    isEstudiante: false,
    totalPracticantes,
    totalEmpresas,
    pendientes,
    revisando,
    finalizados,
    rechazados,
    practicasActivas,
    actividadReciente
  };
}
