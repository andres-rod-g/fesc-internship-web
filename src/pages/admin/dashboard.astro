          <a href="/admin/empresas" class="flex items-center gap-3 p-3 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors">
            <div class="w-10 h-10 bg-green-600 rounded-lg flex items-center justify-center">
              <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
              </svg>
            </div>
            <div>
              <p class="font-medium text-gray-800">Gestionar Empresas</p>
              <p class="text-sm text-gray-600">Administrar empresas colaboradoras</p>
            </div>
          </a>
          
          <a href="/admin/practicantes" class="flex items-center gap-3 p-3 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors">
            <div class="w-10 h-10 bg-blue-600 rounded-lg flex items-center justify-center">
              <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
              </svg>
            </div>
            <div>
              <p class="font-medium text-gray-800">Ver Reportes</p>
              <p class="text-sm text-gray-600">Generar informes detallados</p>
            </div>
          </a>
        </div>
      </div>

      <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
        <h2 class="text-xl font-semibold text-gray-800 mb-4">Actividad Reciente</h2>
        <div class="space-y-4">
          {actividadReciente.length > 0 ? (
            actividadReciente.map((practicante) => (
              <div class="flex items-center gap-3">
                <div class={`w-2 h-2 rounded-full ${
                  practicante.estado === 'pendiente' ? 'bg-yellow-500' :
                  practicante.estado === 'revisando' ? 'bg-blue-500' :
                  practicante.estado === 'finalizado' ? 'bg-green-500' :
                  'bg-red-500'
                }`}></div>
                <div class="flex-1">
                  <p class="text-sm font-medium text-gray-800">
                    {practicante.nombres} {practicante.apellidos}
                  </p>
                  <p class="text-xs text-gray-600">
                    {practicante.programa} - Estado: {
                      practicante.estado === 'pendiente' ? 'Pendiente' :
                      practicante.estado === 'revisando' ? 'En revisión' :
                      practicante.estado === 'finalizado' ? 'Finalizado' :
                      'Rechazado'
                    }
                  </p>
                </div>
              </div>
            ))
          ) : (
            <div class="text-center py-8 text-gray-500">
              <p>No hay actividad reciente</p>
              <p class="text-sm">Los nuevos registros aparecerán aquí</p>
            </div>
          )}
        </div>
      </div>
    </div>
  </div>
