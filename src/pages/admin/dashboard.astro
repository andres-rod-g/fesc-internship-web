---
import AdminLayout from "../../layouts/AdminLayout.astro";
import StudentLayout from "../../layouts/StudentLayout.astro";
import jwt from "jsonwebtoken";
import { JWT_SECRET } from "~/env";
import { connectDB } from "~/utils/db.js";
import { ObjectId } from "mongodb";

const token = Astro.cookies.get("token")?.value;
let user = null;
if (token) {
  try {
    user = jwt.verify(token, JWT_SECRET);
  } catch (err) {
    console.error("Error al verificar el token:", err);
    user = null;
  }
}

if (!user) {
  console.log("Token inválido o no presente. Redirigiendo al login.");
  return Astro.redirect("/login");
}

// Obtener estadísticas reales de la base de datos
const db = await connectDB();

let dashboardData = {};

// Si es docente (profesor), mostrar información de sus grupos
if (user.role === "profesor") {
  try {
    // Obtener los grupos del docente (buscando su ID en el array de docentes)
    const grupos = await db.collection("grupos").find({
      docentes: new ObjectId(user.id)
    }).toArray();

    // Contar estudiantes totales
    let totalEstudiantes = 0;
    let procesosEnProgreso = 0;

    for (const grupo of grupos) {
      if (grupo.estudiantes && Array.isArray(grupo.estudiantes)) {
        totalEstudiantes += grupo.estudiantes.length;
      }

      // Contar procesos en progreso para este grupo
      const procesosGrupo = await db.collection("proceso-practicas").find({
        grupoId: grupo._id
      }).toArray();
      procesosEnProgreso += procesosGrupo.length;
    }

    dashboardData = {
      isEstudiante: false,
      isProfesor: true,
      grupos: grupos.map(g => ({
        _id: g._id.toString(),
        nombre: g.nombre,
        semestre: g.semestre,
        estudiantes_count: g.estudiantes?.length || 0
      })),
      totalEstudiantes,
      procesosEnProgreso
    };
  } catch (error) {
    console.error("Error al obtener datos del profesor:", error);
    dashboardData = {
      isEstudiante: false,
      isProfesor: true,
      grupos: [],
      totalEstudiantes: 0,
      procesosEnProgreso: 0,
      error: true
    };
  }
} else if (user.role === "registro_control") {
  try {
    // Obtener estadísticas de validación de pagos
    const practicantesPagoPendiente = await db.collection("practicantes").countDocuments({
      estado_preinscripcion: "pago_pendiente",
      "validacion_pago.estado": "pendiente"
    });

    const practicantesConPagoValidado = await db.collection("practicantes").countDocuments({
      estado_preinscripcion: "pago_validado",
      "validacion_pago.estado": "aprobado"
    });

    const practicantesRechazados = await db.collection("practicantes").countDocuments({
      "validacion_pago.estado": "rechazado"
    });

    const actividadReciente = await db.collection("practicantes")
      .find({ estado_preinscripcion: { $in: ["pago_pendiente", "pago_validado"] } })
      .sort({ _id: -1 })
      .limit(5)
      .toArray();

    dashboardData = {
      isEstudiante: false,
      isRegistroControl: true,
      practicantesPagoPendiente,
      practicantesConPagoValidado,
      practicantesRechazados,
      actividadReciente
    };
  } catch (error) {
    console.error("Error al obtener datos de registro y control:", error);
    dashboardData = {
      isEstudiante: false,
      isRegistroControl: true,
      practicantesPagoPendiente: 0,
      practicantesConPagoValidado: 0,
      practicantesRechazados: 0,
      actividadReciente: [],
      error: true
    };
  }
} else if (user.role === "estudiante") {
  // Obtener los datos del estudiante
  const estudiante = await db.collection("users").findOne({ _id: new ObjectId(user.id) });

  // Obtener su proceso de prácticas
  const proceso = await db.collection("proceso-practicas").findOne({
    estudianteId: new ObjectId(user.id)
  });

  // Obtener su grupo
  let grupo = null;
  if (proceso) {
    grupo = await db.collection("grupos").findOne({ _id: proceso.grupoId });
  }

  // Obtener sus seguimientos
  let seguimientos = [];
  if (grupo) {
    seguimientos = await db.collection("seguimientos-practicas")
      .find({ grupoId: grupo._id })
      .toArray();
  }

  // Contar recursos de seguimiento completados vs pendientes
  let recursosPendientes = 0;
  let recursosValidados = 0;
  let recursosRechazados = 0;

  if (seguimientos.length > 0) {
    const recursos = await db.collection("recursos")
      .find({
        tipo: "seguimiento",
        usuarioId: new ObjectId(user.id),
        grupoId: grupo?._id
      })
      .toArray();

    recursos.forEach(r => {
      if (r.estado === "pendiente") recursosPendientes++;
      else if (r.estado === "validado") recursosValidados++;
      else if (r.estado === "rechazado") recursosRechazados++;
    });
  }

  dashboardData = {
    isEstudiante: true,
    estudiante,
    proceso,
    grupo,
    seguimientos,
    recursosPendientes,
    recursosValidados,
    recursosRechazados
  };
} else {
  // Dashboard para administradores y directores
  // Total de practicantes
  const totalPracticantes = await db.collection("practicantes").countDocuments();

  // Total de empresas
  const totalEmpresas = await db.collection("empresas").countDocuments();

  // Practicantes por estado
  const estadosPracticantes = await db.collection("practicantes").aggregate([
    {
      $group: {
        _id: "$estado",
        count: { $sum: 1 }
      }
    }
  ]).toArray();

  // Crear mapa de estados
  const estadosMap = {};
  estadosPracticantes.forEach(est => {
    estadosMap[est._id] = est.count;
  });

  const pendientes = estadosMap['pendiente'] || 0;
  const revisando = estadosMap['revisando'] || 0;
  const finalizados = estadosMap['finalizado'] || 0;
  const rechazados = estadosMap['rechazado'] || 0;

  // Contar prácticas activas (empresas con practicantes asignados)
  const empresasConPracticantes = await db.collection("empresas").aggregate([
    { $unwind: { path: "$practicantes_asignados", preserveNullAndEmptyArrays: false } },
    {
      $match: {
        "practicantes_asignados.estado_practica": { $in: ["pendiente", "activo"] }
      }
    },
    {
      $group: {
        _id: null,
        count: { $sum: 1 }
      }
    }
  ]).toArray();

  const practicasActivas = empresasConPracticantes.length > 0 ? empresasConPracticantes[0].count : 0;

  // Obtener actividad reciente (últimos 5 practicantes registrados)
  const actividadReciente = await db.collection("practicantes")
    .find({})
    .sort({ _id: -1 })
    .limit(5)
    .toArray();

  dashboardData = {
    isEstudiante: false,
    totalPracticantes,
    totalEmpresas,
    pendientes,
    revisando,
    finalizados,
    rechazados,
    practicasActivas,
    actividadReciente
  };
}
