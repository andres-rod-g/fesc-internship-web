---
import MainLayout from "~/layouts/MainLayout.astro";
import SolicitudEmpresasForm from "~/components/forms/SolicitudEmpresasForm.jsx";
import { ArrowLeft } from "lucide-react";
---

<MainLayout title="Formulario de Solicitud de Practicantes | FESC">
  <div class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100 py-8">
    <div class="max-w-4xl mx-auto px-4">
      <!-- Back button -->
      <div class="mb-6">
        <a href="/solicitar-practicantes" class="inline-flex items-center text-gray-600 hover:text-accent transition-colors">
          <ArrowLeft className="w-5 h-5 mr-2" />
          Volver
        </a>
      </div>

      <!-- Form Component -->
      <SolicitudEmpresasForm client:only="react" />
    </div>
  </div>
</MainLayout>
